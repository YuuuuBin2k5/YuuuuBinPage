{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Spring Boot: Clean",
      "type": "shell",
      "command": "mvn",
      "args": ["clean"],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "problemMatcher": []
    },
    {
      "label": "Spring Boot: Compile",
      "type": "shell",
      "command": "mvn",
      "args": ["compile"],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "problemMatcher": []
    },
    {
      "label": "Spring Boot: Package",
      "type": "shell",
      "command": "mvn",
      "args": ["package", "-DskipTests"],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "problemMatcher": []
    },
    {
      "label": "Spring Boot: Run",
      "type": "shell",
      "command": "mvn",
      "args": ["spring-boot:run"],
      "group": "build",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "problemMatcher": {
        "owner": "spring-boot",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*BUILD SUCCESS.*$",
          "endsPattern": "^.*Started PortfolioApiApplication.*$"
        }
      }
    },
    {
      "label": "Spring Boot: Test",
      "type": "shell",
      "command": "mvn",
      "args": ["test"],
      "group": "test",
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "problemMatcher": []
    },
    {
      "label": "React: Dev Server",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "group": "build",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/client"
      },
      "problemMatcher": {
        "owner": "vite",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    }
  ]
}
